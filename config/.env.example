# Warehance API Configuration
WAREHANCE_API_KEY=your_api_key_here
WAREHANCE_API_URL=https://api.warehance.com/v1

# PostgreSQL Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=warehance_returns
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_PORT=8000
APP_HOST=0.0.0.0

# Email Configuration (for sharing reports)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com
EMAIL_FROM_NAME=Warehance Returns System

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Sync Settings
SYNC_INTERVAL_HOURS=1
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5

# Pagination
API_PAGE_SIZE=100
WEB_PAGE_SIZE=50

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# File Storage
UPLOAD_DIR=uploads
REPORTS_DIR=reports/generated