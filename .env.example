# Warehance Returns Environment Variables
# Copy this file to .env and fill in your actual values

# REQUIRED: Warehance API Key
WAREHANCE_API_KEY=your_warehance_api_key_here

# OPTIONAL: Azure SQL Database (leave empty to use SQLite)
DATABASE_URL=your_azure_sql_connection_string_here

# OPTIONAL: Azure Active Directory (for advanced features)
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CLIENT_ID=your_azure_client_id  
AZURE_CLIENT_SECRET=your_azure_client_secret

# OPTIONAL: Email Configuration
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password